<% if flash[:notice] %>
  <div class="alert alert-info mt-2 mb-0 py-0 ps-2" role="alert">
    <p class="pb-0 my-2"><%= notice %></p>
  </div>
<% end %>
<% if flash[:alert] %>
  <div class="alert alert-warning mt-2 mb-0 py-0 pt-2" role="alert">
    <p class="pb-0 my-2"><%= alert %></p>
  </div>
<% end %>
